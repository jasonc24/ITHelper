@model ITHelper.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Category Details: @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ParentCategoryId" class="control-label"></label>
            <select asp-for="ParentCategoryId" class="form-control" disabled>
                @foreach (var item in Model.ParentCategories)
                {
                    <option value="@item.Value" selected="@item.Selected" disabled="@item.Disabled">@item.Text</option>
                }
            </select>
            <span asp-validation-for="ParentCategory" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PrimaryContact" class="control-label"></label>
            <input asp-for="PrimaryContact" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" readonly />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PrimaryEMail" class="control-label"></label>
            <input asp-for="PrimaryEMail" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Deleted" class="control-label"></label>
            <input asp-for="Deleted" class="form-control" readonly />
        </div>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
