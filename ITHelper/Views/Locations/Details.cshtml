@model ITHelper.Models.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Location Details: @Model.Name</h1>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Address1" class="control-label"></label>
            <input asp-for="Address1" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Address2" class="control-label"></label>
            <input asp-for="Address2" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="State" class="control-label"></label>
            <select asp-for="State" class="form-control" disabled>
                @foreach (var item in Model.States)
                {
                    <option value="@item.Value" selected="@item.Selected" disabled="@item.Disabled">@item.Text</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Zip" class="control-label"></label>
            <input asp-for="Zip" class="form-control" readonly />
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="PrimaryContact" class="control-label"></label>
            <input asp-for="PrimaryContact" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="PrimaryEMail" class="control-label"></label>
            <input asp-for="PrimaryEMail" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" readonly />
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="SendEmail" disabled /> @Html.DisplayNameFor(model => model.SendEmail)
            </label>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>
