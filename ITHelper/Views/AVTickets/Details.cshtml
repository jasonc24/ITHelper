@model ITHelper.Models.AVTicket

@{
    ViewData["Title"] = "AV Request Details";
}

<h1>AV Request Details</h1>
<h4>For Ticket: @Model.Id</h4>
<hr />

<div class="row">
    <div class="col">
        <div class="form-group">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="FName" class="control-label"></label>
            <input asp-for="FName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="LName" class="control-label"></label>
            <input asp-for="LName" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="EMail" class="control-label"></label>
            <input asp-for="EMail" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="TargetMinistry" class="control-label"></label>
            <input asp-for="TargetMinistry" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<Enumerations.TicketStatus>()" disabled>
                <option value="">-- Select One --</option>
            </select>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="Model.Categories" disabled></select>
        </div>
        <div class="form-group">
            <label asp-for="LocationId" class="control-label"></label>
            <select asp-for="LocationId" class="form-control" asp-items="Model.Locations" disabled></select>
        </div>
        <div class="form-group">
            <label asp-for="GeneralIdea" class="control-label"></label>
            <textarea asp-for="GeneralIdea" class="form-control" readonly></textarea>
        </div>
        <div class="form-group form-check" title="Please note the process does take time and would need a minimum of two - three weeks to complete.">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="ExistingFootage" readonly /> @Html.DisplayNameFor(model => model.ExistingFootage)
            </label>
        </div>
        <div class="form-group form-check" title="A Storyboard is a sequence of drawings, typically with some directions and dialog, representing the shots planned for a movie or television production. This helps with getting a vision put in place. A Script is written text of a play, movie, or broadcast with dialog and may include director notes.">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="StoryBoards" readonly /> @Html.DisplayNameFor(model => model.StoryBoards)
            </label>
        </div>
        <div class="form-group">
            <label asp-for="Deadline" class="control-label"></label>
            <input asp-for="Deadline" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Notes" class="control-label"></label>
            <textarea asp-for="Notes" class="form-control" readonly></textarea>
        </div>
        <div class="form-group">
            <label asp-for="DateSubmitted" class="control-label"></label>
            <input asp-for="DateSubmittedDisplay" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="LastUpdated" class="control-label"></label>
            <input asp-for="LastUpdatedDisplay" class="form-control" readonly />
        </div>
    </div>
</div>
<br />
<br />
<div>
    <a asp-action="Index">Back to List</a> |
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
</div>
</div>